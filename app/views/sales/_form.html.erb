<form class="container">
	<%= form_with(model: sale) do |form| %>
		<% if sale.errors.any? %>
			<div style="color: red">
				<h2><%= pluralize(sale.errors.count, "error") %> prohibited this sale from being saved:</h2>

				<ul>
					<% sale.errors.each do |error| %>
						<li><%= error.full_message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>

		<div class="form-group row mb-3">
			<%= form.label :cumtomer_id, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%= form.select :cumtomer_id, Customer.all.map { |c| [c.name, c.id] }, {}, { class: "form-select" } %>
			</div>
		</div>

		<div class="form-group row mb-3">
			<%= form.label :seller_id, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%# form.select :seller_id, options_for_select(@sellers.map { |c| [c.name, c.id] }, sale.seller_id), prompt: "Select a Sellers" %>
				<%= form.select :seller_id, Seller.all.map { |c| [c.name, c.id] }, {}, { class: "form-select" } %>
			</div>
		</div>

		<div class="form-group row mb-3">
			<%= form.label :product_id, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%# form.select :product_id, options_for_select(@products.map { |c| [c.name, c.id] }, sale.product_id), prompt: "Select a Products" %>
				<%= form.select :product_id, Product.all.map { |c| [c.name, c.id] }, {}, { class: "form-select" } %>
			</div>
		</div>

		<div class="form-group row mb-3">
			<%= form.label :price, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%= form.number_field :price, class: 'form-control' %>
			</div>
		</div>

		<div class="form-group row mb-3">
			<%= form.label :amount, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%= form.number_field :amount, class: 'form-control' %>
			</div>
		</div>

		<div class="form-group row mb-3">
			<%= form.label :seller_address, class: 'col-sm-2 col-form-label' %>
			<div class="col-sm-10">
				<%= form.text_field :seller_address, class: 'form-control' %>
			</div>
		</div>

		<div class="btn-group">
			<%= form.submit "Update Sale", class: 'btn btn-primary' %>
		</div>
	<% end %>
</form>
